{
  "name": "@connext/backend",
  "version": "0.2.0-alpha.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "dev": "concurrently -i -k -n 'app,tsc' -c 'green,cyan' 'nodemon'",
    "start": "node --enable-source-maps dist/index.js'",
    "lint": "eslint ./src --ext .ts --env node",
    "test": "nyc ts-mocha --require 'test/mock.ts' --check-leaks --exit --timeout 60000 'test/**/*.spec.ts'",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./coverage ./node_modules",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)",
    "zapatos": "zapatos"
  },
  "nodemonConfig": {
    "exec": "node --enable-source-maps ./dist/index.js | pino-pretty",
    "delay": "500",
    "ext": "js,json",
    "watch": []
  },
  "eslintIgnore": [
    "graphqlsdk.ts"
  ],
  "author": "Connext",
  "license": "ISC",
  "dependencies": {
    "@connext/nxtp-adapters-subgraph": "workspace:*",
    "@connext/nxtp-utils": "workspace:*",
    "@sinclair/typebox": "^0.23.4",
    "dotenv": "^16.0.0",
    "interval-promise": "^1.4.0",
    "pg": "^8.7.3",
    "zapatos": "^5.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^9.1.0",
    "@types/pg": "^8",
    "@types/secp256k1": "^4.0.3",
    "@types/sinon": "^10.0.11",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "pino-pretty": "^7.5.4",
    "rimraf": "^3.0.2",
    "sinclair": "^0.2.0",
    "sinon": "^13.0.1",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "gitHead": "937a7cde93e6ac1e151c6374f48adf83d3fa4ec6",
  "stableVersion": "0.2.0-alpha.0"
}
