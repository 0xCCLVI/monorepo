{
  "extends": "./tsconfig.build.json",
  "include": ["modules", "types", "scripts", "example"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@connext/nxtp-utils": ["modules/utils/src"],
      "@connext/nxtp-contracts": [
        "modules/contracts/typechain",
        "modules/contracts/artifacts",
        "modules/contracts/deployments"
      ],
      "@connext/nxtp-subgraph": ["modules/subgraph/generated"],
      "$test/*": ["test/*"]
    }
  }
}
